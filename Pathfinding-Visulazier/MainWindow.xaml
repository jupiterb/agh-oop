<Window x:Class="Pathfinding_Visulazier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pathfinding_Visulazier"
        mc:Ignorable="d"
        Title="Pathfinding and Labyrinth Visualizer" Height="800" Width="1400"
        ContentRendered="WindowContentRendered">

    <Canvas Name="VisualizeArea" ClipToBounds="True" Margin="5,5,5,5">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFA99CFF" Offset="0.271"/>
            </LinearGradientBrush>
        </Canvas.Background>
    </Canvas>
    
</Window>
